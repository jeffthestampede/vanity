<div class="row">
  <div class="large-9 columns">
    <%= form_for(@item) do |f| %>
      <% if @item.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@item.errors.count, "error") %> prohibited this item from being saved:</h2>

          <ul>
          <% @item.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
          <% end %>
          </ul>
        </div>
      <% end %>

      <div class="field">
        <%= f.label :name %><br />
        <%= f.text_field :name %>
      </div>
      <div class="field">
        <%= f.label :brand %><br />
        <%= f.text_field :brand %>
      </div>
      <div class="field">
        <%= f.label :category %><br />
        <%= f.text_field :category %>
      </div>
      <div class="field">
        <%= f.label :description %><br />
        <%= f.text_field :description %>
      </div>
      <div class="field">
        <%= f.label :purchase_date, "Purchased Date" %><br />
        <%= f.text_field :purchase_date, :type => "date" %>
      </div>
      <div class="field">
        <%= f.label :exp_date, "Expiration Date" %><br />
        <%= f.text_field :exp_date, :type => "date" %>
      </div>
      <div class="field">
        <%= f.label :picture, "Picture/Swatch" %><br />
        <%= f.file_field :picture %>
      </div>
      <div class="actions">
        <%= f.submit %>
      </div>
    <% end %>
  </div>
</div>
